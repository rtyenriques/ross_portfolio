<div id="project-container" class="container">

<h1>Projects</h1>

<div class="row row-cols-1 row-cols-md-3 g-3">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Github link</th>
      <th>Youtube link</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <% # <div class="card-group"> %>
  <tbody>
    <% @projects.each do |project| %>
      <tr>

       
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.github_link %></td>
        <td><%= project.youtube_link %></td>
        <td><%= link_to "Show", project %></td>
        <td><%= link_to "Edit", edit_project_path(project) %></td>
        <td><%= link_to "Destroy", project, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>

      <div class="col">
      <div class="card h-100" style="width: 18rem;">
  <img src="<%= asset_path("lake.jpeg") %>" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= project.name %></h5>
    <p class="card-text"><%= project.language %></p>
    <p class="card-text"><%= project.description %></p>
    <%= link_to "View Project", project, class: "btn btn-primary" %>
   
  </div>
      </div>
      </div>
    <% end %>
  </tbody>
</table>
</div>

</div>
<br>

<%= link_to "Add New Project", new_project_path, class: "btn btn-secondary" %>


</div>